<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneNumberVerification">


    <TextView
        android:id="@+id/phone_number_header"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="@string/phoneNumber_veriyPage_header1"
        android:textAlignment="center"
        android:textColor="@color/dark_green"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_header"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginBottom="200dp">

        <TextView
            android:id="@+id/phone_number_header_2"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="@string/phoneNumber_verifyPage_header2"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="56dp"
            tools:layout_editor_absoluteY="125dp" />

        <TextView
            android:id="@+id/wrong_number_button"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/phoneNumber_verifyPage_wrongnum"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:textStyle="bold"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="200dp" />

        <EditText
            android:id="@+id/Otp"
            android:layout_width="@dimen/phoneNumber_verifyPage_editText_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:hint="@string/phoneNumber_verifyPage_editText_hint"
            android:inputType="number"
            android:textAlignment="center"
            tools:layout_editor_absoluteX="106dp"
            tools:layout_editor_absoluteY="275dp" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:gravity="center"
            android:text="@string/phoneNumber_verifyPage_textView_code"
            android:textAlignment="center"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="131dp"
            tools:layout_editor_absoluteY="334dp" />

        <Button
            android:id="@+id/verify_btn"
            android:layout_width="@dimen/phoneNumber_verifyPage_verifyBtn_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="@string/phoneNumber_verifyPage_verifyBtn_text"
            android:backgroundTint="@color/light_green"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="409dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>