<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="30dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/videoCallDialogTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start voice call?"/>
         <Space android:id="@+id/spaceDialog"
             app:layout_constraintTop_toBottomOf="@id/videoCallDialogTextview"
             android:layout_width="match_parent"
             android:layout_height="20dp"/>

    <TextView
        android:id="@+id/cancelBtnVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:clickable="true"
        android:focusable="true"
        android:text="CANCEL"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spaceDialog" />

    <TextView
        android:id="@+id/callBtnVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintTop_toBottomOf="@id/spaceDialog"
        android:text="CALL"
        android:textColor="@color/dark_green"
        android:textStyle="bold"
        android:layout_marginStart="30dp"
        app:layout_constraintStart_toEndOf="@+id/cancelBtnVideo" />
</androidx.constraintlayout.widget.ConstraintLayout>